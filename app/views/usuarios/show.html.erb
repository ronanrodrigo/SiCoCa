<h1>Usuário <%= @usuario.id %> <b id="notice"><%= notice %></b></h1>

<fieldset class="ui-widget-content ui-corner-all fieldset">
    <legend>Dados do usuário</legend>
	<p class="show">
	  <b class="show">Email:</b>
	  <%= @usuario.email %>
	</p>

	<p class="show">
	  <b class="show">Senha:</b>
	  <%= @usuario.senha %>
	</p>
</fieldset>
<fieldset class="ui-widget-content ui-corner-all fieldset">
    <legend>Dados da pessoa</legend>
	<p class="show">
		<b class="show">Nome:</b>
		<%= @usuario.pessoa.nome %>
	</p>
	<p class="show">
		<b class="show">CPF:</b>
		<%= @usuario.pessoa.cpf %>
	</p>
</fieldset>

<div class="botoes_rodape" id="botoes_rodape">
	<%= link_to 'Editar', edit_usuario_path(@usuario) %> |
	<%= link_to 'Voltar', usuarios_path %> |
	<%= link_to "Gerar relatório", usuario_path(@usuario, :format => "pdf") %>
</div>
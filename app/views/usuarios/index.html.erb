
<h1>Usuários<div class="busca">
	<% form_tag usuarios_path, :class=> 'busca' , :method => 'get' do%>
		<%= text_field_tag :search, params[:search], :class => 'txtsalvar' %>
		<%= submit_tag "Buscar", :name => nil, :class => 'btsalvar' %>
	<% end %>		
</div></h1>

<table>
  <tr>
    <th>Nome</th>
    <th>e-mail</th>
    <th>Tipo do usuário</th>
    <th class="botoes"></th>
    <th class="botoes"></th>
    <th class="botoes"></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.pessoa.nome %> - <%= usuario.pessoa.cpf %></td>
    <td><%= usuario.email %></td>
    <td><%= usuario.tipo_usuario.descricao %></td>
    <td class="botoes" id="tablebotao"><%= link_to 'Visualizar', usuario %></td>
    <td class="botoes" id="tablebotao"><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
    <td class="botoes" id="tablebotao"><%= link_to 'Remover', usuario, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="botoes_rodape" id="botoes_rodape">
	<%= link_to 'Cadastrar usuário', new_usuario_path %> |
	<%= link_to "Gerar relatório", usuarios_path(@usuario, :format => "pdf") %>
	<%= will_paginate @usuario %>
</div>

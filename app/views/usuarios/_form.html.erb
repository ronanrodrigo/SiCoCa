<%= form_for(@usuario) do |f| %>
<%= javascript_include_tag 'jquery-1.4.2.min' %>
<%= javascript_include_tag 'jquery-ui-1.8.5.custom.min' %>
<%= stylesheet_link_tag 'jquery-ui-1.8.5.custom' %>

<script type="text/javascript"> 
	$(document).ready(function() {
			nomes = "<%= @pessoas %>";
			nomes = nomes.substring(0,nomes.length-1);
			nomesArray = nomes.split(";");
			
			$("#nomepessoa").autocomplete({
				source: nomesArray
			});
	});

	function digitacpf() {
		nomecpf = $("#nomepessoa").val().split(" - ");
		$("#nomepessoa").val(nomecpf[0]);
		$("#cpfpessoa").val(nomecpf[1]);
	}
</script>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<fieldset class="ui-widget-content ui-corner-all fieldset">
	    <legend>Dados do usuário</legend>
		<div class="field">
		  <%= f.label "E-mail:" %>
		  <%= f.text_field :email %>
		</div>
		<div class="field">
		  <%= f.label "Senha:" %>
		  <%= f.text_field :senha %>
		</div>
		<div class="field">
		  <%= f.label "Tipo de usuário:" %>
		  <%= f.text_field :tipo_usuario %>
		</div>
	</fieldset>
	<fieldset class="ui-widget-content ui-corner-all fieldset">
	    <legend>Dados da pessoa</legend>	
		<div class="field">
		  <%= label :pessoa, "Nome: " %>
		  <%= text_field :pessoa, :nome, :id => "nomepessoa", :onblur => "{digitacpf()}" %>
		</div>
		<div class="field">
		  <%= label :pessoa, "CPF:" %>
		  <%= text_field :pessoa, :cpf, :id => "cpfpessoa" %>
		</div>
	</fieldset>

  <div class="actions">
    <%= f.submit 'Salvar' %>

<% end %>
